          },
          "mimeType": {
            "type": "string",
            "description": "Mime Type"
          },
          "thumbnailLink": {
            "type": "string",
            "description": "Thumbnail Link"
          },
          "createdDate": {
            "type": "string",
            "description": "Created Date"
          },
          "downloadUrl": {
            "type": "string",
            "description": "Download URL"
          }
        }
      },
      "imports": {
        "properties": {}
